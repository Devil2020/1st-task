<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
  >
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Passengers"
         android:id="@+id/textone"
         android:textSize="15sp"
         app:layout_constraintTop_toBottomOf="parent"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="De . Mohammed Morse"
        app:layout_constraintTop_toBottomOf="@+id/textone"
        android:layout_marginTop="15dp"
        app:layout_editor_absoluteY="30dp"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
       android:id="@+id/textsec"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:background="@drawable/shape"
        app:layout_constraintTop_toBottomOf="@+id/textsec"
         app:layout_editor_absoluteX="20dp"
        android:id="@+id/im1"
        />



    <ImageView
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:background="@drawable/shape"
        app:layout_constraintTop_toBottomOf="@+id/textsec"
        app:layout_editor_absoluteX="280dp"
        android:id="@+id/im2"
        />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="5dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/line"
        app:layout_constraintLeft_toRightOf="@+id/im1"
        app:layout_constraintRight_toLeftOf="@id/im2"
        app:layout_constraintTop_toBottomOf="@id/textsec" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SFO"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@+id/im1"
        android:layout_marginTop="25dp"
        app:layout_editor_absoluteX="35dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALX"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@+id/im1"
        android:layout_marginTop="25dp"
        app:layout_editor_absoluteX="300dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_iconmonstrairport5"
        app:layout_constraintTop_toBottomOf="@id/textsec"
        app:layout_editor_absoluteX="170dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/icons8"
        app:layout_editor_absoluteX="160dp"
        app:layout_editor_absoluteY="12dp"
        />
</android.support.constraint.ConstraintLayout>
</layout>
